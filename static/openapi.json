{
  "info": {
    "title": "Book Inventory REST API",
    "description": "A web api to handle book inventory operations.",
    "version": "v1.1"
  },
  "openapi": "3.0.3",
  "servers": [
    {
      "url": "https://docker-book-inventory-api.onrender.com"
    },
    {
      "url": "http://127.0.0.1:5000"
    }
  ],
  "tags": [
    {
      "name": "books",
      "description": "book operation"
    },
    {
      "name": "extra-field",
      "description": "student"
    }
  ],
  "paths": {
    "/books": {
      "get": {
        "tags": [
          "books"
        ],
        "summary": "Returns All books in database",
        "description": "Returns All books in database",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "book": {
                      "type": "object",
                      "example": [
                        {
                          "author": "Leo Tolstoy",
                          "genre": "Comedy",
                          "isbn": "512-135-134-879-1",
                          "title": "ZECTAA",
                          "year_published": 2000
                        },
                        {
                          "author": "Mark",
                          "genre": "Comedy",
                          "isbn": "123-14132-5123",
                          "title": "Funnnnnn Book",
                          "year_published": 2022
                        }
                      ]
                    },
                    "count": {
                      "type": "integer",
                      "example": 2
                    },
                    "message": {
                      "type": "string",
                      "example": "success"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "books"
        ],
        "summary": "Add new book",
        "description": "Add new book",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/book"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "book <Book Title> has been added successfully."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": ""
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "example": "An Error Occured While Inserting The Book"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": [
          "books"
        ],
        "summary": "Return specific book",
        "description": "Return specific book",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id number",
            "example": 1,
            "schema": {
              "type": "integer",
              "format": "serial4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "book": {
                      "type": "object",
                      "example": {
                        "author": "Tastoy",
                        "genre": "Comedy",
                        "isbn": "222-135-134-879-1",
                        "title": "Caaer 2",
                        "year_published": 2000
                      }
                    },
                    "message": {
                      "type": "string",
                      "example": "success"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": ""
