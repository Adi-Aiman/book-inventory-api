    "/extra-field": {
      "post": {
        "tags": [
          "extra-field"
        ],
        "summary": "summary->None",
        "description": "description->None",
        "operationId": "opearationID->None",
        "requestBody": {
          "description": "description->None",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Extra-Field"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Extra-Field"
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Extra-Field"
              }
            }
          }
        },
        "responses": {
          "default": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Extra-Field"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Extra-Field"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "book": {
        "type": "object",
        "properties": {
          "isbn": {
            "type": "string",
            "format": "varchar",
            "example": "978-554-72587-216-7"
          },
          "title": {
            "type": "string",
            "format": "varchar",
            "example": "Book of bok"
          },
          "author": {
            "type": "string",
            "format": "varchar",
            "example": "Da vin ci"
          },
          "year_published": {
            "type": "integer",
            "format": "int4",
            "example": 1990
          },
          "genre": {
            "type": "string",
            "format": "varchar",
            "example": "Comedy"
          }
        }
      },
      "Extra-Field": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "examples": [
              "Error code"
            ]
          },
          "status": {
            "type": "string",
            "examples": [
              "Error name"
            ]
          },
          "message": {
            "type": "string",
            "examples": [
              "Error message"
            ]
          },
          "errors": {
            "type": "object",
            "examples": [
              "Errors"
            ]
          }
        }
      }
    }
  }
